#ielogo {
    .leftbottom(50%,0px);
    background-image: url('img/ielogo.png');
    margin-left: round(148px / -2);
    width: 148px;
    height: 31px;
    display: block;
}

#social {
    margin-top: 3em;
    display: block;
    text-align: center;
}

.social-link {
    display: inline-block;
    width: 32px;
    height: 40px;
    background-position: center center;
    background-repeat: no-repeat;
    opacity: 0.65;
    .transition(opacity 150ms);
    
    &:hover {
        opacity: 1;
    }
}

