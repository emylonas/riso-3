@import "reset.less";
@import "var.less";
@import "icons.less";
//@import "../everest/css/mixins.less";
@import "mixins.less";

html, body {
    width: 100%;
    height: 100%;
    font-family: @sans;
	color: rgba(255,255,255,0.65);
	font-size: 16px;
	line-height: 1.5;    
    overflow: hidden;
}

@slidetime: 30s;
@-webkit-keyframes scaleIn {
    0% {
        .scale(1);
    }
    100% {
        .scale(1.5);
    }
}

#bg {
    .animation(scaleIn, 25s);
    .absolute();
    .transform-origin(50%, 10%);
    overflow: hidden;
    background-size: 100% 100%;
    background-size: cover;
    background-image: url('img/pumori.jpg');
    -webkit-animation-fill-mode: both;
    -moz-animation-fill-mode: both;
    -ms-animation-fill-mode: both;
    animation-fill-mode: both;

}

#sidebar {
    .absolute(0,auto,0,0);
    overflow:scroll;
    width: 100%;
    height: 100%;
    max-width: 360px;
    background: rgba(8,19,30,0.85);
    text-align: center;
    display: table;
    
    a {
        color: @brightblue;
        text-decoration: none;
        .transition(color 150ms);
        &:hover {
            color: white;
        }
    }
}
 
#content-host {
    padding: 24px;
    text-align: center;
    display: table-cell;
    vertical-align: middle;
    position: relative;
    top: -40px;
    
    #menu {
        width: 100%;
        font-size: 13px;
        display: block;
        
        margin-top: 1em;
        margin-bottom: 3em;
        
        a {
            color: white;
            text-transform: uppercase;
            .transition(color 150ms);
            &:hover {
                color: white;
            }
            &:after {
                content:'';
                display: inline-block;
                width: 1px;
                height: 20px;
                background: fade(white, 45%);
                margin-left: 8px;
                margin-right: 8px;
                position: relative;
                top: 5px;
                
            }
            &:last-child:after {
                display: none;
            }
        }
    }
    
    #actions {
        display: block;
        
        .action-link {
            display: block;
            margin: 1em 0 2em 0;
            color: inherit;
            &:hover {
                color: white;
            }
        }
        
        h2 {
            color: @brightblue;
            font-weight: 600;
            font-size: 1.25em;
        }
    
    }
}

